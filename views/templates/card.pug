div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${analisis.imagen}` alt=` imagen cultivo ${analisis.titulo}`)
    div(class="p-5 space-y-5")
        h3(class="text-2xl font-bold")= analisis.titulo
        p(class="text-sm text-gray-600") Cultivo:
            span(class="text-gray-800 font-bold mx-2")= analisis.cultivo.nombre
        p(class="text-sm text-gray-600") Trips:
            span(class="text-gray-800 font-bold mx-2")= analisis.trips
        //p(class="text-sm text-gray-600") Fecha Analisis:
        //    span(class="text-gray-800 font-bold mx-2")= analisis.createdAt
        p(class="text-sm text-gray-600") Edad:
            span(class="text-gray-800 font-bold mx-2")= analisis.edad


        a(href=`/analisis/${analisis.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver Analisis