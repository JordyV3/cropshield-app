extends ../layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    link(rel="stylesheet", href="/css/styles.css")


block contenido

    //- pre= JSON.stringify(propiedad, undefined, 2)

    div(class="py-5")

        h1( id="titulo" class="text-4xl my-10 font-extrabold text-center")= analisis.titulo

        div
            a(href="#" class="font-bold text-gray-600 text-sm") Categoria: 
                span(class="font-normal")= analisis.categoria.nombre

        div(class="mt-5 md:flex md:gap-4 md:items-start")
            div(class="md:w-2/3 bg-white shadow rounded-lg") 
                div(class="px-5 py-10 space-y-5 containerPreview")
                    img(src=`/uploads/${analisis.imagen}` class="imagen-preview" id="imgUpload" alt=`imagen del cultivo ${analisis.titulo}`)

                div(class="px-5 py-10 space-y-5")

                    h2(class="text-2xl leading-6 font-bold text-gray-900") Información Analisis

                    p(class="text-black-300 text-ls")= analisis.descripcion

                    div(class="grid grid-cols-1 md:grid-cols-2")

                        p(class="text-gray-800 font-bold text-lg") Cultivo
                            span(class="text-gray-800 block text-xs")= analisis.cultivo.nombre
                            br
                        p(class="text-gray-800 font-bold text-lg") Fecha
                            span(class="text-gray-800 block text-xs")= formatearFecha(analisis.createdAt)
                            br
                        p(class="text-gray-800 font-bold text-lg") Observaciones
                            span(class="text-gray-600 block text-xs")= analisis.observaciones

                        p(class="text-gray-800 font-bold text-lg") Temperatura grados
                            span(class="text-gray-800 block text-xs")= analisis.temperatura + "°C"
                            br

                        p(class="text-gray-800 font-bold text-lg") Edad en días
                            span(class="text-gray-800 block text-xs")= analisis.edad
                            br

                        p(class="text-gray-800 font-bold text-lg") Altitud
                            span(class="text-gray-800 block text-xs")= analisis.altura

                        p(class="text-gray-800 font-bold text-lg" ) Presencia de Trips
                            span(class="text-gray-800 block text-xs" id="prediccion")
                            br
                        p(class="text-gray-800 font-bold text-lg") Nivel de confianza
                            span(class="text-gray-800 block text-xs" id="confianza")
                            br


            aside(class="md:w-1/3 bg-white shadow rounded-lg") 
                h3(class="text-center py-10 leading-6 text-2xl font-bold text-gray-900") Ubicación

                div(class="h-96" id="mapa")
                    p(id="lat" class="hidden")= analisis.lat
                    p(id="lng" class="hidden")= analisis.lng

                div(class="p-5")
                    p(class="text-gray-600 font-bold text-xs") Dirección
                        span(id="calle" class="text-gray-800 block text-lg")= analisis.calle


                    if !esAgricultor

                        h3(class="text-2xl text-center my-10 font-extrabold text-gray-900") Agricultor

                        h4(class="text-2xl text-center my-10 font-extrabold text-gray-600") Mensajes
                        div(class="mx-auto max-w-4xl bg-white shadow")

                            //if mensajes.length
                            //    ul
                            //        each mensaje in mensajes
                            //            li(class="border-gray-200 border-b p-5")
                            //                p(class="font-bold text-gray-800") Nombre:
                            //                    span(class="font-normal")= mensaje.usuario.nombre
                            //
                            //                p(class="font-bold text-gray-800") Email:
                            //                    span(class="font-normal")= mensaje.usuario.email
                            //
                            //                p(class="font-bold text-gray-800") Mensaje:
                            //                    span(class="font-normal")= mensaje.mensaje
                            //
                            //                p(class="font-bold text-gray-800") Enviado:
                            //                    span(class="font-normal")= formatearFecha(mensaje.createdAt)
                            //
                            //else
                            //    p(class="text-center text-gray-600 p-5") No Hay Mensajes


                        if enviado
                            p(class="p-2 text-center bg-green-100 text-green-600 uppercase font-bold") Mensaje Enviado Correctamente

                        else if usuario

                            if errores
                                div(class="max-w-md mx-auto my-10")
                                    each error in errores
                                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

                            form(method="POST")
                                input(type="hidden" name="_csrf" value= csrfToken)

                                div(class="space-y-5")
                                    label(for="mensaje") Mensaje
                                    textarea(id="mensaje" name="mensaje" class="w-full px-2 py-2 border border-gray-300 rounded-lg shadow placeholder-gray-400" placeholder="Coloca tu mensaje aquí" )

                                    input(type="submit" value="Enviar Mensaje" class="bg-indigo-600 text-white font-bold uppercase text-sm w-full p-2 cursor-pointer")

                        else 
                            div(class="flex flex-col items-center justify-center gap-2")
                                p(class="text-center") Si deseas contactar al agricultor
                                a(class="text-indigo-600" href="/auth/registro") debes crear una cuenta


