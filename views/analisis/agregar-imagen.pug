extends ../layout/admin
    
block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)

block contenido 
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Crop
            span.font-normal Shield
        h2.text-center.text-2xl.font-extrabold= pagina

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10" style="border 1px solid red")
            form( id="imagen" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/analisis/agregar-imagen/${analisis.id}`)
                //- input(type="file" id="inputImagen", name="inputImagen")
                input(type="hidden" name="_csrf" value= csrfToken)

            button(id="publicar" class="mt-5 w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="button" ) Publicar Analisis

                    
block scripts
    script(src="/js/agregarImagen.js")
